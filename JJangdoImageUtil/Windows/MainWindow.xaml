                            Margin="5,5,5,5">
                        <TextBlock Text="가로 세로&#xA;50% 길이 감소"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center" />
                    </Button>

                    <Button x:Name="_size60ScaleDownBtn_Copy"
                            Click="_size60ScaleDownBtn_Click"
                            Grid.Column="4"
                            Grid.Row="1"
                            Style="{StaticResource MenuButtonStyle}"
                            Background="#FFACAAEC"
                            Margin="5,5,5,5">
                        <TextBlock Text="가로 세로&#xA;60% 길이 감소"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center" />
                    </Button>

                    <Button x:Name="_size80ScaleDownBtn_Copy"
                            Click="_size80ScaleDownBtn_Click"
                            Grid.Column="5"
                            Grid.Row="1"
