                            Grid.Column="6"
                            Grid.Row="1"
                            Style="{StaticResource MenuButtonStyle}"
                            Background="#FFACAAEC"
                            Margin="5,5,5,5">
                        <TextBlock Text="가로 세로&#xA;90% 길이 감소"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center" />
                    </Button>


                    <!-- 가로 세로 길이 비율 증가 -->

                    <Button x:Name="_size10ScaleUpBtn_Copy"
                            Click="_size10ScaleUpBtn_Click"
                            Grid.Column="0"
                            Grid.Row="2"
                            Style="{StaticResource MenuButtonStyle}"
                            Background="#FFACAAEC"
                            Margin="5,5,5,5">
                        <TextBlock Text="가로 세로&#xA;10% 길이 증가"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center" />
                    </Button>

                    <Button x:Name="_size20ScaleUpBtn_Copy"
                            Click="_size20ScaleUpBtn_Click"
                            Grid.Column="1"
                            Grid.Row="2"
                            Style="{StaticResource MenuButtonStyle}"
                            Background="#FFACAAEC"
                            Margin="5,5,5,5">
                        <TextBlock Text="가로 세로&#xA;20% 길이 증가"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center" />
                    </Button>

                    <Button x:Name="_size40ScaleUpBtn_Copy"
                            Click="_size40ScaleUpBtn_Click"
                            Grid.Column="2"
                            Grid.Row="2"
                            Style="{StaticResource MenuButtonStyle}"
                            Background="#FFACAAEC"
                            Margin="5,5,5,5">
                        <TextBlock Text="가로 세로&#xA;40% 길이 증가"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center" />
                    </Button>

                    <Button x:Name="_size50ScaleUpBtn_Copy"
