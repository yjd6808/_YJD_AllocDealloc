                            Background="#FFF3C167">
                    </Button>

                    <Button x:Name="_sizeSpecificBtn"
                            Click="_sizeSpecificBtn_Click"
                            Grid.Column="4"
                            Grid.Row="5"
                            Style="{StaticResource MenuButtonStyle}"
