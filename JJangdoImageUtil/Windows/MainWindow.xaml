                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Button x:Name="_convertGifBtn"
                            Click="_convertGifBtn_Click"
                            Content="GIF로 변환"
                            Grid.Column="0"
                            Background="LightCoral"
                            Style="{StaticResource MenuButtonStyle}">
                    </Button>

                    <Button x:Name="_convertPngBtn"
                            Click="_convertPngBtn_Click"
                            Content="PNG로 변환"
                            Grid.Column="1"
                            Background="SeaGreen"
                            Style="{StaticResource MenuButtonStyle}">
                    </Button>

                    <Button x:Name="_convertJpegBtn"
                            Click="_convertJpegBtn_Click"
                            Content="JPEG로 변환"
                            Grid.Column="2"
                            Background="DarkKhaki"
                            Style="{StaticResource MenuButtonStyle}">
                    </Button>

                    <Button x:Name="_convertTiffBtn"
                            Click="_convertTiffBtn_Click"
                            Content="TIFF로 변환"
                            Grid.Column="3"
                            Background="MediumAquamarine"
                            Style="{StaticResource MenuButtonStyle}">
                    </Button>

                    <Button x:Name="_convertWebpBtn"
                            Click="_convertWebpBtn_Click"
                            Content="WEBP로 변환"
                            Grid.Column="4"
                            Background="DeepSkyBlue"
                            Style="{StaticResource MenuButtonStyle}">
                    </Button>

                    <Button x:Name="_convertBmpBtn"
                            Click="_convertBmpBtn_Click"
                            Content="BMP로 변환"
                            Grid.Column="5"
                            Background="HotPink"
                            Style="{StaticResource MenuButtonStyle}">
                    </Button>

                    <Button x:Name="_convertIcoBtn"
                            Click="_convertIcoBtn_Click"
                            Content="ICO로 변환"
                            Grid.Column="6"
                            Background="Gray"
                            Style="{StaticResource MenuButtonStyle}">
                    </Button>
                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image></Image>
                        <TextBlock>회전 변환</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Button x:Name="_rotateClockWiseBtn"
                            Click="_rotateClockWiseBtn_Click"
                            Content="시계 회전"
                            Grid.Column="0"
                            Style="{StaticResource MenuButtonStyle}">
                    </Button>

                    <Button x:Name="_rotateCounterClockWiseBtn"
                            Click="_rotateCounterClockWiseBtn_Click"
                            Content="반시계 회전"
                            Grid.Column="1"
                            Style="{StaticResource MenuButtonStyle}">
                    </Button>
                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image></Image>
                        <TextBlock>크기 변환</TextBlock>
                    </StackPanel>
                </TabItem.Header>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Button x:Name="_width5ScaleUpBtn"
                            Click="_width5ScaleUpBtn_Click"
