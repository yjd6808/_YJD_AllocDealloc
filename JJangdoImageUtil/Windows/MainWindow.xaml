                            Click="_size60ScaleUpBtn_Click"
                            Grid.Column="4"
                            Grid.Row="2"
                            Style="{StaticResource MenuButtonStyle}"
                            Background="#FFACAAEC"
                            Margin="5,5,5,5">
                        <TextBlock Text="가로 세로&#xA;60% 길이 증가"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center" />
                    </Button>

                    <Button x:Name="_size80ScaleUpBtn_Copy"
