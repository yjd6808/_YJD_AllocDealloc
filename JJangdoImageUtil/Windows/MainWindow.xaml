                            Background="#FFF3C167">
                    </Button>

                    <CheckBox x:Name="_applyAspectRatioCheckBox"
                              Margin="5"
                              Foreground="#FFF3C167"
                              Grid.Column="5"
                              Grid.Row="5"
                              Content="비율 유지"
                              Style="{StaticResource MaterialDesignAccentCheckBox}"
                              HorizontalAlignment="Center"
                              materialDesign:CheckBoxAssist.CheckBoxSize="20"
                              BorderBrush="AntiqueWhite">
                    </CheckBox>


                </Grid>

            </TabItem>
        </TabControl>

        <Grid DockPanel.Dock="Top"
              Margin="10, 0, 10, 5">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button x:Name="_saveFileUniqueIdBtn"
                        Click="_saveFileUniqueIdBtn_Click"
                        Grid.Column="0"
                        Style="{StaticResource MenuButtonStyle}"
                        Background="#FFA8F194">
                    <TextBlock TextWrapping="Wrap"
                               TextAlignment="Center"><Run Language="ko-kr"
                                                           Text="고유 번호로" /><Run Text="&#xA;파일 저장" /></TextBlock>
                </Button>

                <Button x:Name="_saveFileBtn"
                        Click="_saveFileBtn_Click"
                        Grid.Column="1"
                        Style="{StaticResource MenuButtonStyle}"
                        Background="#FFA8F194">
                    <TextBlock Text="원본 이름으로 파일 저장"
                               TextWrapping="Wrap"
                               TextAlignment="Center">
                    </TextBlock>
                </Button>

                <Button x:Name="_copyBase64ImgTagBtn"
                        Click="_copyBase64ImgTagBtn_Click"
                        Grid.Column="2"
                        Style="{StaticResource MenuButtonStyle}"
                        Background="#FFA8F194">
                    <TextBlock Text="Base64 Img &#x0a;태그 복사"
                               TextWrapping="Wrap"
                               TextAlignment="Center">
                    </TextBlock>
                </Button>

                <Button x:Name="_developerInformationBtn"
                        Click="_developerInformationBtn_Click"
                        Grid.Column="3"
                        Style="{StaticResource MenuButtonStyle}"
                        Background="#FFA8F194">
                    <TextBlock Text="만든 사람"
                               TextWrapping="Wrap"
                               TextAlignment="Center">
                    </TextBlock>
                </Button>

            </Grid>


            <Rectangle Width="auto"
                       Height="3"
                       Margin="5"
                       Grid.Row="1"
                       StrokeThickness="0">
                <Rectangle.Fill>
                    <LinearGradientBrush>
                        <GradientStop x:Name="GradientStop1"
                                      Color="#FF3D85F9"
                                      Offset="-0.2">
                        </GradientStop>
                        <GradientStop x:Name="GradientStop2"
                                      Color="White"
                                      Offset="-0.1">
                        </GradientStop>
                        <GradientStop x:Name="GradientStop3"
                                      Color="#FF3D85F9"
                                      Offset="0.0">
                        </GradientStop>
                    </LinearGradientBrush>
                </Rectangle.Fill>
                <Rectangle.Triggers>
                    <EventTrigger RoutedEvent="Rectangle.MouseLeftButtonDown">
                        <BeginStoryboard>
                            <Storyboard x:Name="_progressStoryBoard">
                                <DoubleAnimation Storyboard.TargetName="GradientStop1"
                                                 Storyboard.TargetProperty="Offset"
                                                 Duration="0:0:1.2"
                                                 BeginTime="0:0:0"
                                                 From="-0.2"
                                                 To="1.0">
                                </DoubleAnimation>
                                <DoubleAnimation Storyboard.TargetName="GradientStop2"
                                                 Storyboard.TargetProperty="Offset"
                                                 Duration="0:0:1.1"
                                                 BeginTime="0:0:0"
                                                 From="-0.1"
                                                 To="1.0">
                                </DoubleAnimation>
                                <DoubleAnimation Storyboard.TargetName="GradientStop3"
                                                 Storyboard.TargetProperty="Offset"
                                                 Duration="0:0:1.0"
                                                 BeginTime="0:0:0.0"
                                                 From="0.0"
                                                 To="1.0">
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Rectangle.Triggers>
            </Rectangle>
        </Grid>



        <!-- 이미지 슬롯 -->
        <Grid Height="40"
              VerticalAlignment="Bottom"
              Name="_footerGrid"
              DockPanel.Dock="Bottom"
              Background="#FF1B457F">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"></ColumnDefinition>
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
            </Grid.ColumnDefinitions>


            <Slider Name="_zoomSlider"
                    Margin="10,0,0,0"
                    Orientation="Horizontal"
                    Minimum="80"
                    Maximum="320"
                    Value="160"
                    TickFrequency="80"
                    TickPlacement="BottomRight"
                    Foreground="#FF98D478"
                    VerticalAlignment="Center"
                    SmallChange="5"
                    LargeChange="20" />

            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <ProgressBar Name="_progressBar"
                             Minimum="0"
                             Maximum="100"
                             Value="10"
                             Height="15"
                             Background="Transparent"
                             Foreground="#FFC9CA48"
                             BorderBrush="Transparent"
                             Style="{x:Null}"
                             Grid.Column="0">
                </ProgressBar>

                <TextBlock Text="1 / 100"
                           Name="_progressText"
                           Foreground="#FF4ABCCA"
                           Grid.Column="2"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontSize="16">
                </TextBlock>

                <TextBlock Text="Gif로 변환 작업 진행중..."
                           Name="_progressJobName"
                           Foreground="#FF4ABCCA"
                           Grid.Column="4"
                           VerticalAlignment="Center"
                           FontSize="16">
                </TextBlock>

                <Button Grid.Column="6"
                        FontSize="16"
                        Content="0"
                        Width="30"
                        Name="_showWaitingJobButton"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Margin"
                                    Value="5"></Setter>
                            <Setter Property="Padding"
                                    Value="0"></Setter>
                            <Setter Property="BorderBrush"
                                    Value="Transparent"></Setter>
                        </Style>
                    </Button.Style>
                    <Button.Background>
                        <SolidColorBrush x:Name="_showWaitingJobButton_Background"
                                         Color="DodgerBlue">
                        </SolidColorBrush>
                    </Button.Background>
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="Button.MouseLeftButtonDown">
                            <BeginStoryboard>
                                <Storyboard x:Name="_showWaitingJobButtonStoryBoard">
                                    <ColorAnimation Storyboard.TargetName="_showWaitingJobButton_Background"
                                                    Storyboard.TargetProperty="Color"
                                                    Duration="0:0:0.5"
                                                    BeginTime="0:0:0"
                                                    From="DodgerBlue"
                                                    To="Orange">
                                    </ColorAnimation>
                                    <ColorAnimation Storyboard.TargetName="_showWaitingJobButton_Background"
                                                    Storyboard.TargetProperty="Color"
                                                    Duration="0:0:0.5"
                                                    BeginTime="0:0:0.5"
                                                    From="Orange"
                                                    To="DodgerBlue">
                                    </ColorAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>
                </Button>
            </Grid>
        </Grid>

        <Grid DataContext="{Binding Source={StaticResource Photos}}"
              Name="_photoListGrid"
              MinHeight="345"
              AllowDrop="True"
              Drop="_photoListGrid_Drop"
              Margin="5"
              DockPanel.Dock="Bottom">

            <Grid HorizontalAlignment="Center"
                  VerticalAlignment="Center">

                <StackPanel x:Name="_photoListEmptyPanel">
                    <Image Width="100"
                           Height="100">
                        <Image.Source>
                            <BitmapImage UriSource="pack://application:,,,/JJangdoImageUtil;component/Resources/Images/drag_and_drop.png"></BitmapImage>
                        </Image.Source>
                    </Image>

                    <TextBlock Text="이미지를 끌어가꼬 놔주세요."
                               Foreground="#FF89CA4A"
                               FontSize="30">
                    </TextBlock>
                </StackPanel>
            </Grid>


            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <ListBox IsSynchronizedWithCurrentItem="True"
                         Name="_photoListBox"
                         Style="{StaticResource PhotoListBoxStyle}"
                         Margin="5"
                         MouseDoubleClick="_photoListBox_MouseDoubleClick"
                         MouseLeftButtonDown="_photoListBox_MouseLeftButtonDown"
                         MouseMove="_photoListBox_MouseMove"
                         MouseLeftButtonUp="_photoListBox_MouseLeftButtonUp"
                         KeyDown="_photoListBox_KeyDown"
                         SelectionMode="Extended"
                         ItemsSource="{Binding}"
                         SelectedIndex="0">
                    <!--
			        <ListBox.ContextMenu>
				        <ContextMenu>
					        <MenuItem Header="Edit" Click="EditPhoto" />
				        </ContextMenu>
			        </ListBox.ContextMenu>
                    -->
                </ListBox>
            </ScrollViewer>
        </Grid>


    </DockPanel>
</Window>
