                    <!-- 특정값 -->

                    <TextBox Name="_widthTextBox"
                             Style="{StaticResource NumberTextBoxStyle}"
                             Grid.Row="5"
                             Grid.Column="0"
                             Padding="3"
                             materialDesign:HintAssist.Hint="가로 길이 입력"
                             PreviewTextInput="NumberTextBox_PreviewInput" />

                    <TextBox Name="_heightTextBox"
                             Style="{StaticResource NumberTextBoxStyle}"
                             Grid.Row="5"
                             Grid.Column="1"
                             Padding="3"
                             materialDesign:HintAssist.Hint="세로 길이 입력"
                             PreviewTextInput="NumberTextBox_PreviewInput" />

                    <Button x:Name="_widthSpecificBtn"
                            Click="_widthSpecificBtn_Click"
                            Grid.Column="2"
                            Grid.Row="5"
                            Style="{StaticResource MenuButtonStyle}"
                            Content="가로 길이 변경"
                            Background="#FFF3C167">
